<Window x:Class="projetoBanco.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projetoBanco"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <Grid>
        <Label x:Name="lblValor" Content="Digite o valor da transação:" HorizontalAlignment="Left" Margin="28,10,0,0" VerticalAlignment="Top" Width="164" Height="26"/>
        <TextBox x:Name="txtValor" HorizontalAlignment="Left" Margin="34,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
        <Label x:Name="lblCodigoTransacao" Content="Digite o código da transação:" HorizontalAlignment="Left" Margin="34,74,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCodigoTransacao" HorizontalAlignment="Left" Margin="34,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
        <Button x:Name="btnProcessar" Content="Processar Transação" HorizontalAlignment="Left" Margin="34,142,0,0" VerticalAlignment="Top" Width="158" Click="btnProcessar_Click"/>

    </Grid>
</Window>
